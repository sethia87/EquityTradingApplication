<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Define a style for TextBlocks -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF1565C0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Define a style for TextBoxes -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="#FFF1F8E9"/>
        <Setter Property="BorderBrush" Value="#FF81C784"/>
        <Setter Property="Foreground" Value="#FF388E3C"/>
        <Setter Property="Margin" Value="5,10,5,0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Define a style for ComboBoxes -->
    <Style TargetType="ComboBox">
        <Setter Property="Background" Value="#FFF1F8E9"/>
        <Setter Property="BorderBrush" Value="#FF81C784"/>
        <Setter Property="Foreground" Value="#FF388E3C"/>
        <Setter Property="Margin" Value="5,10,5,0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <!-- Define a style for Buttons -->
    <!--<Style TargetType="Button">
        <Setter Property="Background" Value="#FF1565C0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="20,10,20,0"/>
    </Style>-->

    <Style TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="DarkBlue"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="GridLinesVisibility" Value="Horizontal" />
        <Setter Property="AlternatingRowBackground" Value="#FFB2EBF2" />
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="RowBackground" Value="LightBlue" />
    </Style>
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="Background" Value="#E1E1E1" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderBrush" Value="#888" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>
</ResourceDictionary>